<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5sp"
    android:paddingTop="10dp"
    android:gravity="center"
    tools:context=".Worker.AddWorker"
    android:background="@drawable/bg"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_below="@+id/icon_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Ajouter un travailleur "
            android:textColor="#fff"
            android:textSize="25sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/boxes"
                android:layout_marginTop="15px"
                android:layout_below="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="3sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <TextView
                        android:padding="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:text="CIN"
                        android:textColor="#fff"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/cinedt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg"
                        android:inputType="phone"
                        android:padding="5px"
                        android:textColor="#ff9a0e32" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="3sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <TextView
                        android:padding="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:text="Nom et prénom*"
                        android:textColor="#fff"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/nameedt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:padding="5px"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg"
                        android:inputType="textCapSentences"
                        android:textColor="#ff9a0e32" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="3sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <TextView
                        android:padding="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:text="Numero de telephone*"
                        android:textColor="#fff"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/phoneedt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg"
                        android:inputType="phone"
                        android:padding="5px"
                        android:textColor="#ff9a0e32" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_margin="3sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:padding="5sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="cursive"
                            android:gravity="center"
                            android:text="Nbre de jour*"
                            android:textColor="#fff"
                            android:textSize="20sp" />


                        <EditText
                            android:id="@+id/ndjedt"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:padding="5px"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/btn_bg"
                            android:hint="1"
                            android:inputType="number"
                            android:textColor="#ff9a0e32"
                            android:text="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="3sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:padding="5sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="cursive"
                            android:gravity="center"
                            android:text="Prix de jour*"
                            android:textColor="#fff"
                            android:textSize="20sp" />


                        <EditText
                            android:id="@+id/pdjedt"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:padding="5px"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/btn_bg"
                            android:hint="0DT"
                            android:inputType="number"
                            android:textColor="#ff9a0e32" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_margin="3sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:padding="5sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="cursive"
                            android:gravity="center"
                            android:text="Heure debut*"
                            android:textColor="#fff"
                            android:textSize="20sp" />


                        <EditText
                            android:id="@+id/hdedt"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:padding="5px"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/btn_bg"
                            android:hint="8H"
                            android:inputType="number"
                            android:textColor="#ff9a0e32" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="3sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:padding="5sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="cursive"
                            android:gravity="center"
                            android:text="Heure fin*"
                            android:textColor="#fff"
                            android:textSize="20sp" />


                        <EditText
                            android:id="@+id/hfedt"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:padding="5px"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_bg"
                            android:hint="4H"
                            android:inputType="number"
                            android:textColor="#ff9a0e32" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                    <TextView
                        android:padding="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25px"
                        android:layout_weight="2"
                        android:fontFamily="cursive"
                        android:text="Détails"
                        android:textColor="#fff"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/detailsedt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:padding="5px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg"
                        android:inputType="textCapCharacters"
                        android:textColor="#ff9a0e32" />

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="3sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:padding="5sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_gravity="center"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:text="Dejeuner*"
                        android:textColor="#fff"
                        android:textSize="20sp" />




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >

                        <RadioGroup
                            android:id="@+id/dejgrp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/Ouibtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:layout_weight="3"
                                android:fontFamily="cursive"
                                android:text="Oui"
                                android:textColor="#fff"
                                android:textSize="20sp" />

                            <RadioButton
                                android:id="@+id/Nonbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:checked="true"
                                android:fontFamily="cursive"
                                android:text="Non"
                                android:textColor="#fff"
                                android:textSize="20sp" />

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/buttons"
            android:gravity="center"
            android:layout_below="@+id/boxes"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/savebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enregistrer"
                android:textColor="#ff9a4025"
                app:backgroundTint="#fff"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/databtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="liste des ouvriers"
                android:textColor="#ff9a4025"
                app:backgroundTint="#fff"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/cancelbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annuler"
                android:textColor="#ff9a4025"
                app:backgroundTint="#fff"/>

        </LinearLayout>

    </LinearLayout>





</RelativeLayout>