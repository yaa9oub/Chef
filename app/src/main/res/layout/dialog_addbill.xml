<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/dialogTaskColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Ajouter une facture "
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:layout_margin="3dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/boxes"
                android:layout_marginTop="15px"
                android:layout_below="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp">


                <TextView
                        android:padding="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25px"
                        android:layout_weight="2"
                        android:fontFamily="cursive"
                        android:text="Quantité"
                        android:textColor="#fff"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/qttedt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:padding="5px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg"
                        android:inputType="number"
                        android:textColor="#ff9a0e32"
                        android:text="1"/>


                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp">


                <TextView
                        android:padding="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25px"
                        android:layout_weight="2"
                        android:fontFamily="cursive"
                        android:text="Désignation"
                        android:textColor="#fff"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/desedt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:padding="5px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg"
                        android:inputType="textCapSentences"
                        android:textColor="#ff9a0e32"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp">


                <TextView
                        android:padding="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25px"
                        android:layout_weight="2"
                        android:fontFamily="cursive"
                        android:text="P.Unitaire"
                        android:textColor="#fff"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/puedt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:padding="5px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg"
                        android:inputType="number"
                        android:textColor="#ff9a0e32"
                        android:hint="0 DT"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp">


                <TextView
                        android:padding="5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25px"
                        android:layout_weight="2"
                        android:fontFamily="cursive"
                        android:text="P.Total"
                        android:textColor="#fff"
                        android:textSize="20sp" />


                    <EditText
                        android:id="@+id/ptedt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:padding="5px"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_bg"
                        android:inputType="number"
                        android:textColor="#ff9a0e32"
                        android:hint="Qtt*Pu"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    >

                    <Button
                        android:id="@+id/addBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ajouter"
                        android:textColor="#ff9a4025"
                        app:backgroundTint="#fff"
                        android:layout_margin="5px"/>

                    <Button
                        android:id="@+id/cancelBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="annuler"
                        android:textColor="#ff9a4025"
                        app:backgroundTint="#fff"
                        android:layout_margin="5px"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>